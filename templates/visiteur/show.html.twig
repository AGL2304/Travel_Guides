{% extends 'base.html.twig' %}

{% block title %}Détails du Visiteur{% endblock %}

{% block body %}
<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="max-w-3xl mx-auto">

        
        <div class="flex flex-wrap items-center justify-between gap-4 mb-6">
            
            <div>
                <h1 class="text-3xl font-bold text-gray-800">Fiche Visiteur</h1>
                <p class="text-gray-500 mt-1">Détails pour {{ visiteur.firstname }} {{ visiteur.name }}.</p>
            </div>
            
            
            <div class="flex items-center space-x-3">
                <a href="{{ path('app_visiteur_index') }}" class="inline-flex items-center bg-gray-100 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-200 transition-colors text-sm font-medium border border-gray-300">
                    Retour à la liste
                </a>
                <a href="{{ path('app_visiteur_edit', {'id': visiteur.id}) }}" class="inline-flex items-center bg-amber-500 text-white px-4 py-2 rounded-lg hover:bg-amber-600 transition-colors text-sm font-medium shadow-sm">
                    Modifier
                </a>
                
                {{ include('visiteur/_delete_form.html.twig') }}
            </div>
        </div>

        
        <div class="bg-white shadow-md rounded-lg overflow-hidden">
            <div class="border-t border-gray-200">
                {# Utilisation d'une liste de définitions <dl> pour une meilleure sémantique clé/valeur #}
                <dl class="divide-y divide-gray-200">
                    <div class="px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">Nom complet</dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">{{ visiteur.name }} {{ visiteur.firstname }}</dd>
                    </div>

                    <div class="px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">Présence</dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
                            {% if visiteur.present %}
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                    Présent sur le site
                                </span>
                            {% else %}
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                    Non présent
                                </span>
                            {% endif %}
                        </dd>
                    </div>
                    
                    <div class="px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">Commentaire</dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0 whitespace-pre-wrap">{{ visiteur.commentaire|default('Aucun commentaire fourni.') }}</dd>
                    </div>

                    <div class="px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">ID (Base de données)</dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">{{ visiteur.id }}</dd>
                    </div>
                </dl>
            </div>
        </div>

    </div>
</div>
{% endblock %}