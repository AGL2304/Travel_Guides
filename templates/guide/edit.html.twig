{% extends 'base.html.twig' %}

{% block title %}Modifier le Guide : {{ guide.firstname }} {{ guide.name }}{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="max-w-3xl mx-auto">

        {# En-tête de la page avec titre et lien de retour #}
        <div class="flex items-center justify-between mb-6">
            <div>
                <h1 class="text-3xl font-bold gradient-text">
                    Modifier le Guide
                </h1>
                <p class="text-gray-500 mt-1">Édition du profil de {{ guide.firstname }} {{ guide.name }}</p>
            </div>
            <a href="{{ path('app_guide_index') }}" class="text-sm font-medium text-gray-600 hover:text-brand-green transition-colors flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                Retour à la liste
            </a>
        </div>

        
        <div class="bg-white rounded-lg shadow-md">
            {# Le corps du formulaire #}
            <div class="p-6 md:p-8">
                {{ include('guide/_form.html.twig', {
                    'button_label': 'Mettre à jour',
                    'form_title': 'Informations du guide'
                }) }}
            </div>

            {# Une section "Zone de danger" pour la suppression #}
            <div class="bg-gray-50 border-t border-red-200 px-6 py-4 rounded-b-lg">
                <div class="flex items-center justify-between">
                    <div>
                        <h3 class="text-md font-semibold text-red-800">Zone de Danger</h3>
                        <p class="text-sm text-red-600">Cette action est irréversible.</p>
                    </div>
                    <div>
                        {# Le formulaire de suppression est stylisé comme un bouton rouge #}
                        {{ include('guide/_delete_form.html.twig', {
                            'button_class': 'inline-flex items-center bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition-colors shadow-sm font-medium text-sm',
                            'button_label': 'Supprimer ce guide'
                        }) }}
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
{% endblock %}