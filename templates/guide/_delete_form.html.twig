<form method="post" action="{{ path('app_guide_delete', {'id': guide.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce guide ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ guide.id) }}">
    <button type="submit" class="{{ button_class|default('text-red-600 hover:text-red-800') }}">
        {{ button_label|default('Delete') }}
    </button>
</form>